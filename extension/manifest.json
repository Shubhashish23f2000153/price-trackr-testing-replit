{
  "manifest_version": 3,
  "name": "PriceTrackr",
  "version": "1.0",
  "description": "Track product prices across the web.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.amazon.in/*",
    "*://*.flipkart.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.in/*",
        "*://*.flipkart.com/*"
      ],
      "js": ["content_script.js"]
    }
  ]
}