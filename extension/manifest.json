{
  "manifest_version": 3,
  "name": "PriceTrackr",
  "version": "1.0",
  "description": "Track product prices across the web.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.amazon.in/*",
    "*://*.flipkart.com/*",
    "*://*.myntra.com/*",
    "*://*.snapdeal.com/*",
    "*://*.meesho.com/*",
    "http://localhost:8000/"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.in/*"],
      "js": ["scrapers/amazon.js"]
    },
    {
      "matches": ["*://*.flipkart.com/*"],
      "js": ["scrapers/flipkart.js"]
    },
    {
      "matches": ["*://*.myntra.com/*"],
      "js": ["scrapers/myntra.js"]
    },
    {
      "matches": ["*://*.snapdeal.com/*"],
      "js": ["scrapers/snapdeal.js"]
    },
    {
      "matches": ["*://*.meesho.com/*"],
      "js": ["scrapers/meesho.js"]
    }
  ]
}